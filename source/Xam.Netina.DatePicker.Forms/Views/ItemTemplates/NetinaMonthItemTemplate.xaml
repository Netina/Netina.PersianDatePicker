<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="Xam.Netina.DatePicker.Forms.Views.ItemTemplates.NetinaMonthItemTemplate"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <Grid>
            <Frame
                x:Name="mainFrame"
                Margin="3"
                Padding="8,10"
                BackgroundColor="#F6F7F6"
                BorderColor="#eee"
                CornerRadius="5"
                HasShadow="False"
                RotationY="180">
                <Label HorizontalOptions="Center" Text="{Binding MonthName}" />
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="monthItem_Tapped" />
                </Frame.GestureRecognizers>
            </Frame>
        </Grid>

    </ContentView.Content>
</ContentView>